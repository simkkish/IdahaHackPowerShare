@model IEnumerable<PowerShare.Models.Device>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="AddDevice">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeviceType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChargerType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChargerType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.DeviceID }) |
                @Html.ActionLink("Details", "Details", new { id=item.DeviceID}) |
                @Html.ActionLink("Delete", "Delete", new { id=item.DeviceID})
            </td>
        </tr>
}
    </tbody>
</table>
