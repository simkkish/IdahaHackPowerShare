@using PowerShare.Models
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<p style="color:red">@ViewBag.Error</p>
<p style="color:red">@ViewData["UserAddError"]</p>
<p style="color:Blue">@ViewData["UserAddSuccess"]</p>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <h3 style="color:darkorange">Login to ClassWeb.</h3>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Log in</button>
                </div>
                <div class="form-group">
                    @*<p>
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                        </p> *@
                    <p>
                        <a asp-action="AddUser">Register as a new user</a>
                    </p>
                    <p>
                        <a asp-controller="Group" asp-action="LoginGroup">Group Login</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
